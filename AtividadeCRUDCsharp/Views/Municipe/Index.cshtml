@model IEnumerable<MunicipeModel>

<div class="container">
	<div class="d-flex justify-content-between align-items-center mb-5">
		<h1>Municipes</h1>
		<a class="btn btn-success mx-2" asp-controller="Municipe" asp-action="Cadastrar">Cadastrar novo municipe</a>
	</div>


	<table class="table table-stripped table-dark">
		<thead>
			<tr>
				<th scope="col">Id</th>
				<th scope="col">Nome</th>
				<th scope="col">Endereco</th>
				<th scope="col">Telefone</th>
				<th scope="col">Email</th>
				<th scope="col">Ações</th>
			</tr>
		</thead>
		<tbody>
			@if (Model != null)
			{
				@foreach (var municipe in Model)
				{
					<tr>
						<th scope="row">@municipe.Id</th>
						<td>@municipe.Nome</td>
						<td>@municipe.Endereco</td>
						<td>@municipe.Telefone</td>
						<td>@municipe.Email</td>
						<td>
							<a asp-controller="Municipe" asp-action="Editar" asp-route-id="@municipe.Id" class="btn btn-warning mx-2">Editar</a>
							<a asp-controller="Municipe" asp-action="Excluir" asp-route-id="@municipe.Id" class="btn btn-danger mx-2">Excluir</a>
						</td>
					</tr>
				}
			}
			else
			{
				<tr><td><strong>Nenhum Municipe foi realizado!</strong></td></tr>
			}
		</tbody>
	</table>
</div>

@{

}

